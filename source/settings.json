{
  "name": "Sunscreen",
  "version": "1.0.4",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "Adds a welcome image to the Home page"
    }
  ],
  "image_sets": [
    {
      "variable": "lookbook_images",
      "label": "Lookbook images",
      "description": "Adds a gallery to the specified Lookbook page"
    }
  ],
  "fonts": [
    {
      "variable": "shop_name_font",
      "label": "Shop Name Font",
      "default": "Questrial"
    },
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Questrial"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "variable": "accent_color",
      "label": "Accent Color",
      "default": "#F6F8FC"
    },
    {
      "variable": "text_color",
      "label": "Text Color",
      "default": "#325DA8"
    },
    {
      "variable": "shop_name_text_color",
      "label": "Shop Name Text Color",
      "default": "#325DA8"
    },
    {
      "variable": "welcome_header_text_color",
      "label": "Welcome Header Text Color",
      "default": "#325DA8"
    }
  ],
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "lookbook_page_name",
      "label": "Lookbook Page Name",
      "type": "text",
      "description": "Create a custom page for your lookbook, then enter the page name in this field"
    },
    {
      "variable": "welcome_text",
      "label": "Welcome text",
      "type": "text",
      "description": "Displays a welcome message on the Home page"
    },
    {
      "variable": "featured_items_type",
      "label": "Featured items type",
      "type": "select",
      "options": ["Categories", "Products"],
      "default": "Products",
      "description": "Displays featured products or categories on the Home page"
    },
    {
      "variable": "featured_items",
      "label": "Featured items",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of items featured on the Home page"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 4,
      "description": "The number of products displayed per row"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 12,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "show_similar_products",
      "label": "Show related products",
      "type": "boolean",
      "default": true,
      "description": "Displays related products on the Product page"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field in the Shop dropdown menu"
    },
    {
      "variable": "secondary_image_on_hover",
      "label": "Show secondary image on hover",
      "type": "boolean",
      "default": true,
      "description": "Displays the secondary product image when hovering over thumbnails"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "754px",
    "header_image_max_height": "200px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "28px",
    "title_color": "{{ text_color }}",
    "title_background_color": "{{ background_color }}",
    "title_vertical_padding": "27px",
    "accent_background_color": "{{ accent_color }}",
    "background_color": "{{ background_color }}",
    "body_font": "{{ primary_font }}",
    "body_font_size": "15px",
    "step_border_color": "{{ background_color }}",
    "step_header_color": "{{ text_color }}",
    "step_border_width": "4px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_header_background_color": "{{ background_color }}",
    "content_header_color": "{{ text_color }}",
    "content_color": "{{ text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "0px",
    "error_border_color": "#ea4859",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#777777",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "0px",
    "input_border_width": "2px",
    "input_font": "{{ primary_font }}",
    "button_color": "{{ background_color }}",
    "button_border_width": "0px",
    "button_border_radius": "0px",
    "button_font": "{{ primary_font }}",
    "button_hover_color": "{{ background_color }}",
    "button_background_color": "{{ text_color }}",
    "button_hover_background_color": "{{ text_color }}",
    "button_text_transform": "none",
    "link_color": "{{ text_color }}",
    "link_hover_color": "{{ text_color }}",
    "step_header_color": "{{ text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ text_color }}",
    "summary_secondary_color": "{{ text_color }}",
    "summary_item_border_color": "{{ text_color }}",
    "summary_item_list_border_color": "{{ text_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_submit_border_color": "{{ text_color }}",
    "summary_submit_border_width": "4px"
  }
}
